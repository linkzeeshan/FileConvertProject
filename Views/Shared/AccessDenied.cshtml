@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-lock text-danger fa-5x"></i>
                    </div>
                    <h1 class="display-4 fw-bold text-danger mb-3">403</h1>
                    <h2 class="h3 mb-4">Access Denied</h2>
                    
                    <p class="mb-4 lead">
                        Sorry, you don't have permission to access this page.
                    </p>
                    
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4 me-sm-3">
                            <i class="fas fa-home me-2"></i> Return Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="fas fa-arrow-left me-2"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="alert alert-info mt-4">
                <p class="mb-0">
                    If you believe you should have access to this page, please contact your administrator or <a href="mailto:support@fileconvertpro.com">support</a>.
                </p>
            </div>
        </div>
    </div>
</div>
