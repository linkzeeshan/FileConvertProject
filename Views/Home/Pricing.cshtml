@{
    ViewData["Title"] = "Pricing Plans";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto text-center">
            <h1 class="display-4 fw-bold mb-3">@ViewData["Title"]</h1>
            <p class="lead mb-5">Choose the plan that's right for you and start converting files today.</p>
            
            <div class="row justify-content-center">
                <!-- Free Tier -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light py-3">
                            <h2 class="h5 card-title text-center mb-0">Free</h2>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-4">
                                <span class="display-6 fw-bold">$0</span>
                                <span class="text-muted">/month</span>
                            </div>
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> Up to 10MB file size
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> 5 conversions per day
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> Basic conversion types
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> 24-hour file retention
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-times text-danger me-2"></i> Standard processing speed
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-times text-danger me-2"></i> Email support only
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0 pb-4">
                            <div class="d-grid">
                                <a href="#" class="btn btn-outline-primary">Get Started</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Standard Tier -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow border border-primary">
                        <div class="card-header bg-primary text-white py-3">
                            <span class="badge bg-warning text-dark position-absolute top-0 end-0 mt-2 me-2">Popular</span>
                            <h2 class="h5 card-title text-center mb-0">Standard</h2>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-4">
                                <span class="display-6 fw-bold">$9.99</span>
                                <span class="text-muted">/month</span>
                            </div>
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> Up to 50MB file size
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> 50 conversions per day
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> Advanced conversion types
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> 7-day file retention
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> Priority processing
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> Email & chat support
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0 pb-4">
                            <div class="d-grid">
                                <a href="#" class="btn btn-primary">Subscribe Now</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Premium Tier -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-dark text-white py-3">
                            <h2 class="h5 card-title text-center mb-0">Premium</h2>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-4">
                                <span class="display-6 fw-bold">$19.99</span>
                                <span class="text-muted">/month</span>
                            </div>
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> Up to 200MB file size
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> Unlimited conversions
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> All conversion types
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> 30-day file retention
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> Highest priority processing
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check text-success me-2"></i> Priority support 24/7
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0 pb-4">
                            <div class="d-grid">
                                <a href="#" class="btn btn-outline-dark">Subscribe Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-5">
                <h2 class="h3 mb-4">Frequently Asked Questions</h2>
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="accordion" id="pricingFaq">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false">
                                        Can I upgrade or downgrade my plan at any time?
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#pricingFaq">
                                    <div class="accordion-body">
                                        Yes, you can upgrade or downgrade your subscription at any time. When you upgrade, the new features will be available immediately. If you downgrade, your current plan will remain active until the end of your billing cycle.
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false">
                                        Do you offer annual billing?
                                    </button>
                                </h2>
                                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#pricingFaq">
                                    <div class="accordion-body">
                                        Yes, we offer annual billing with a 20% discount compared to monthly billing. You can select the annual option during checkout.
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false">
                                        Is there a free trial for paid plans?
                                    </button>
                                </h2>
                                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#pricingFaq">
                                    <div class="accordion-body">
                                        We offer a 7-day free trial for both our Standard and Premium plans. No credit card is required to start your trial. You can upgrade to a paid plan at any time during or after your trial.
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingFour">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false">
                                        What payment methods do you accept?
                                    </button>
                                </h2>
                                <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#pricingFaq">
                                    <div class="accordion-body">
                                        We accept all major credit cards (Visa, Mastercard, American Express, Discover), PayPal, and Apple Pay. All payments are processed securely through our payment provider.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-5 pt-3">
                <h2 class="h3 mb-4">Need a Custom Plan?</h2>
                <p class="mb-4">
                    If you have specific requirements or need a custom solution for your business, we're here to help.
                </p>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-envelope me-2"></i> Contact Us
                </a>
            </div>
        </div>
    </div>
</div>
