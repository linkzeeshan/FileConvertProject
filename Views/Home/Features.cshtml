@{
    ViewData["Title"] = "Features";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <h1 class="display-5 fw-bold mb-4">@ViewData["Title"]</h1>
                    <p class="lead mb-5">Discover the powerful features that make FileConvertPro the best choice for all your file conversion needs.</p>
                    
                    <!-- Main Features -->
                    <div class="row mb-5">
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center p-4">
                                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3">
                                        <i class="fas fa-bolt"></i>
                                    </div>
                                    <h3 class="h5 mb-3">Fast Conversion</h3>
                                    <p class="mb-0">Convert files in seconds with our optimized cloud-based processing infrastructure.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center p-4">
                                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3">
                                        <i class="fas fa-shield-alt"></i>
                                    </div>
                                    <h3 class="h5 mb-3">Secure Processing</h3>
                                    <p class="mb-0">Your files are encrypted during transit and storage, and automatically deleted after processing.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center p-4">
                                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                    <h3 class="h5 mb-3">High Quality</h3>
                                    <p class="mb-0">Advanced conversion algorithms ensure the highest quality output for all file types.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Conversion Types -->
                    <h2 class="h3 mb-4">Supported Conversion Types</h2>
                    <div class="row mb-5">
                        <div class="col-lg-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h3 class="h5 mb-0">
                                        <i class="fas fa-image text-primary me-2"></i> Image Conversions
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p>Convert between various image formats while preserving quality:</p>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check text-success me-2"></i> JPG to PNG</li>
                                                <li><i class="fas fa-check text-success me-2"></i> PNG to JPG</li>
                                                <li><i class="fas fa-check text-success me-2"></i> GIF to PNG</li>
                                                <li><i class="fas fa-check text-success me-2"></i> BMP to JPG</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check text-success me-2"></i> TIFF to JPG</li>
                                                <li><i class="fas fa-check text-success me-2"></i> WebP to JPG</li>
                                                <li><i class="fas fa-check text-success me-2"></i> SVG to PNG</li>
                                                <li><i class="fas fa-check text-success me-2"></i> And many more...</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h3 class="h5 mb-0">
                                        <i class="fas fa-file-alt text-primary me-2"></i> Document Conversions
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p>Convert between document formats with formatting preserved:</p>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check text-success me-2"></i> PDF to DOCX</li>
                                                <li><i class="fas fa-check text-success me-2"></i> DOCX to PDF</li>
                                                <li><i class="fas fa-check text-success me-2"></i> RTF to PDF</li>
                                                <li><i class="fas fa-check text-success me-2"></i> TXT to PDF</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check text-success me-2"></i> HTML to PDF</li>
                                                <li><i class="fas fa-check text-success me-2"></i> DOCX to RTF</li>
                                                <li><i class="fas fa-check text-success me-2"></i> PDF to HTML</li>
                                                <li><i class="fas fa-check text-success me-2"></i> And many more...</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h3 class="h5 mb-0">
                                        <i class="fas fa-table text-primary me-2"></i> Spreadsheet Conversions
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p>Convert between spreadsheet formats with formulas intact:</p>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check text-success me-2"></i> XLSX to CSV</li>
                                                <li><i class="fas fa-check text-success me-2"></i> CSV to XLSX</li>
                                                <li><i class="fas fa-check text-success me-2"></i> XLS to XLSX</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check text-success me-2"></i> XLSX to PDF</li>
                                                <li><i class="fas fa-check text-success me-2"></i> XLSX to HTML</li>
                                                <li><i class="fas fa-check text-success me-2"></i> And more...</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h3 class="h5 mb-0">
                                        <i class="fas fa-desktop text-primary me-2"></i> Presentation Conversions
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p>Convert between presentation formats with animations preserved:</p>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check text-success me-2"></i> PPTX to PDF</li>
                                                <li><i class="fas fa-check text-success me-2"></i> PPT to PPTX</li>
                                                <li><i class="fas fa-check text-success me-2"></i> PPTX to JPG</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check text-success me-2"></i> PDF to PPTX</li>
                                                <li><i class="fas fa-check text-success me-2"></i> PPTX to HTML</li>
                                                <li><i class="fas fa-check text-success me-2"></i> And more...</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Advanced Features -->
                    <h2 class="h3 mb-4">Advanced Features</h2>
                    <div class="row mb-5">
                        <div class="col-md-6 mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="feature-icon-small bg-primary bg-gradient text-white rounded-circle">
                                        <i class="fas fa-cog"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h3 class="h5 mb-2">Batch Processing</h3>
                                    <p class="mb-0">Convert multiple files at once to save time. Drag and drop up to 20 files for simultaneous conversion.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="feature-icon-small bg-primary bg-gradient text-white rounded-circle">
                                        <i class="fas fa-sliders-h"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h3 class="h5 mb-2">Conversion Settings</h3>
                                    <p class="mb-0">Fine-tune your conversions with custom settings like quality, resolution, and compression level.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="feature-icon-small bg-primary bg-gradient text-white rounded-circle">
                                        <i class="fas fa-history"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h3 class="h5 mb-2">Conversion History</h3>
                                    <p class="mb-0">Access your previous conversions and download converted files again without reconverting.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="feature-icon-small bg-primary bg-gradient text-white rounded-circle">
                                        <i class="fas fa-cloud-download-alt"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h3 class="h5 mb-2">Cloud Storage Integration</h3>
                                    <p class="mb-0">Connect to Dropbox, Google Drive, or OneDrive to convert files directly from your cloud storage.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="feature-icon-small bg-primary bg-gradient text-white rounded-circle">
                                        <i class="fas fa-bell"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h3 class="h5 mb-2">Email Notifications</h3>
                                    <p class="mb-0">Get notified by email when your conversions are complete, especially useful for large files.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="feature-icon-small bg-primary bg-gradient text-white rounded-circle">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h3 class="h5 mb-2">Password Protection</h3>
                                    <p class="mb-0">Add password protection to your converted PDF files for enhanced security.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Call to Action -->
                    <div class="text-center mt-5">
                        <h2 class="h3 mb-4">Ready to Start Converting?</h2>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4 me-md-2">
                                <i class="fas fa-rocket me-2"></i> Get Started
                            </a>
                            <a asp-controller="Home" asp-action="Pricing" class="btn btn-outline-primary btn-lg px-4">
                                <i class="fas fa-tags me-2"></i> View Pricing
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .feature-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 4rem;
            height: 4rem;
            font-size: 2rem;
        }
        
        .feature-icon-small {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 3rem;
            height: 3rem;
            font-size: 1.25rem;
        }
    </style>
}
