@section Scripts {
    <script>
        // FAQ Search Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('faqSearch');
            const accordionItems = document.querySelectorAll('.accordion-item');
            const noResultsMessage = document.createElement('div');
            noResultsMessage.className = 'alert alert-info mt-4';
            noResultsMessage.innerHTML = '<i class="fas fa-info-circle me-2"></i> No matching questions found. Please try a different search term or <a href="/Home/Contact" class="alert-link">contact us</a> for assistance.';
            noResultsMessage.style.display = 'none';
            searchInput.parentNode.parentNode.appendChild(noResultsMessage);
            
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                let matchFound = false;
                
                // Show all tabs if search is empty
                if (searchTerm === '') {
                    document.querySelectorAll('.nav-link').forEach(tab => {
                        tab.parentElement.style.display = 'block';
                    });
                    document.querySelectorAll('.tab-pane').forEach(pane => {
                        pane.classList.remove('show', 'active');
                    });
                    document.querySelector('#general').classList.add('show', 'active');
                    document.querySelector('#general-tab').classList.add('active');
                    document.querySelector('#general-tab').setAttribute('aria-selected', 'true');
                }
                
                accordionItems.forEach(item => {
                    const question = item.querySelector('.accordion-button').textContent.toLowerCase();
                    const answer = item.querySelector('.accordion-body').textContent.toLowerCase();
                    
                    if (question.includes(searchTerm) || answer.includes(searchTerm)) {
                        item.style.display = 'block';
                        matchFound = true;
                        
                        // If searching, expand the item that matches
                        if (searchTerm !== '') {
                            // Find which tab this item belongs to
                            const parentTabPane = item.closest('.tab-pane');
                            const tabId = parentTabPane.id;
                            
                            // Activate the correct tab
                            document.querySelectorAll('.nav-link').forEach(tab => {
                                tab.classList.remove('active');
                                tab.setAttribute('aria-selected', 'false');
                            });
                            document.querySelectorAll('.tab-pane').forEach(pane => {
                                pane.classList.remove('show', 'active');
                            });
                            document.querySelector(`#${tabId}`).classList.add('show', 'active');
                            document.querySelector(`#${tabId}-tab`).classList.add('active');
                            document.querySelector(`#${tabId}-tab`).setAttribute('aria-selected', 'true');
                            
                            // Expand the accordion item
                            const button = item.querySelector('.accordion-button');
                            const collapseElement = item.querySelector('.accordion-collapse');
                            
                            if (button.classList.contains('collapsed')) {
                                button.classList.remove('collapsed');
                                button.setAttribute('aria-expanded', 'true');
                                collapseElement.classList.add('show');
                            }
                        }
                    } else {
                        item.style.display = 'none';
                    }
                });
                
                noResultsMessage.style.display = matchFound ? 'none' : 'block';
            });
        });
    </script>
